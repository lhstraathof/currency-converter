{
	"name": "currency-converter",
	"version": "0.1.0",
	"private": true,
	"repository": {
		"type": "git",
		"url": "https://gitlab.com/larsamsterdam/react-currency-converter"
	},
	"keywords": [
		"react",
		"javascript"
	],
	"author": "Lars Straathof",
	"contributors": [
		"Lars Straathof <mail@lars.amsterdam> (http://lars.amsterdam)"
	],
	"license": "MIT",
	"dependencies": {
		"@testing-library/jest-dom": "^5.11.4",
		"@testing-library/react": "^11.1.0",
		"@testing-library/react-hooks": "^5.1.0",
		"@testing-library/user-event": "^12.1.10",
		"craco": "^0.0.3",
		"currency-flags": "^3.1.0",
		"eslint-config-prettier": "^8.1.0",
		"eslint-plugin-prettier": "^3.3.1",
		"husky": "^5.1.3",
		"lint-staged": "^10.5.4",
		"node-sass": "^5.0.0",
		"prettier": "^2.2.1",
		"react": "^17.0.1",
		"react-dom": "^17.0.1",
		"react-scripts": "4.0.3",
		"retire": "^2.2.4"
	},
	"scripts": {
		"start": "craco start",
		"build": "craco build",
		"test": "craco test --transformIgnorePatterns \"node_modules/(?!your-module-name)/\"",
		"lint": "eslint 'src/**/*.{js,jsx,ts,tsx}'",
		"lint:fix": "eslint --fix 'src/**/*.{js,jsx,ts,tsx}'",
		"format": "prettier --write \"src/**/*.+(js|jsx|json|yml|yaml|css|md|vue)\"",
		"retire": "retire"
	},
	"eslintConfig": {
		"extends": [
			"react-app",
			"react-app/jest",
			"plugin:prettier/recommended"
		],
		"plugins": [
			"react-hooks"
		],
		"rules": {
			"react-hooks/rules-of-hooks": "error",
			"react-hooks/exhaustive-deps": "warn"
		}
	},
	"prettier": {
		"printWidth": 100,
		"trailingComma": "all",
		"semi": true,
		"jsxSingleQuote": true,
		"singleQuote": true,
		"useTabs": true
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.+(js|jsx)": [
			"eslint --fix",
			"git add"
		],
		"*.+(json|css|scss|md)": [
			"prettier --write",
			"git add"
		]
	},
	"jest": {
		"moduleNameMapper": {
			"@assets(.*)$": "<rootDir>/src/assets$1",
			"@constants(.*)$": "<rootDir>/src/constants$1",
			"@components(.*)$": "<rootDir>/src/components$1",
			"@utils(.*)$": "<rootDir>/src/utils$1"
		}
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	}
}
